<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">

    <node pkg="nodelet" type="nodelet" name="mavros_interface" args="load mrs_mavros_interface/MavrosInterface $(arg uav_name)_nodelet_manager" output="screen">

      <!-- Subscribers --> 
      <remap from="~odometry_in" to="mavros/local_position/odom" />

      <!-- Publisher --> 
      <remap from="~odometry_out" to="~converted_mavros_odom" />

    </node>

  </group>

</launch>
